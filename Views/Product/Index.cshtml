@model List<Product>
@{
}
<h2 class="text-center mb-5">List of Products</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">New Product</a>
    </div>
    @* <div class="col">

    </div> *@
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>Create At</th>
            <th>Action</th>
        </tr>
        
    </thead>

    <tbody>
        @foreach (var proudct in Model)
        {
            <tr>
                <td>@proudct.Id</td>
                <td>@proudct.Name</td>
                <td>@proudct.Brand</td>
                <td>@proudct.Category</td>
                <td>@(proudct.Price)$</td>
                <td><img src="~/Image/@proudct.ImageFileName" width="100" /></td>
                <td>@proudct.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Edit" asp-route-id="@proudct.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Product" asp-action="Delete" asp-route-id="@proudct.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>